{
  "manifest_version": 3,
  "name": "Screen Content AI Chat (NVIDIA API)",
  "version": "1.2",
  "description": "Chat with an NVIDIA hosted AI about the content of the current tab.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://integrate.api.nvidia.com/" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}